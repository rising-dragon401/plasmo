{
  "compilerOptions": {
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "moduleResolution": "node",

    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "lib": ["DOM"]
  },
  "include": ["src/**/*.ts"]
}
