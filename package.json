{
  "name": "p1asm0",
  "private": true,
  "workspaces": [
    "packages/*",
    "templates/*",
    "extensions/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "patch": "pnpm --filter ./packages/** --parallel -r exec pnpm version -- patch",
    "publish": "pnpm --parallel --filter ./packages/** -r publish"
  },
  "devDependencies": {
    "turbo": "1.2.8"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@7.0.1"
}
